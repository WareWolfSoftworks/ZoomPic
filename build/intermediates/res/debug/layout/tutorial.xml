<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/zoompic">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Here's How You Play"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a category to play and the game will begin. You will start zoomed in on an image. You have two minutes to guess what the image is. You can pan the screen and zoom out. Zoom Outs, however, will count against your score so use them wisely. There is no limit to the number of guesses but the more you take the lower your score will be. So let's play!"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:background="@drawable/abc_cab_background_bottom_holo_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main Menu"
        android:id="@+id/bBack"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />
</RelativeLayout><!-- From: file:/C:/Users/tmmoo_000/Documents/Android%20Projects/ZoomPic/res/layout/tutorial.xml -->